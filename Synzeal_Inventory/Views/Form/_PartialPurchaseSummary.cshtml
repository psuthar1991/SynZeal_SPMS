@model  Synzeal_Inventory.Entity.SZ_QuotationDetail
@{
    ViewBag.Title = "Purchase Summary";
    Layout = null;
    string sectionName = ViewBag.sectionName;

}
<div class="col-md-12">
    <div class="box">
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Summary</label>
                    <textarea class="form-control" id="SummaryText" name="SummaryText" rows="25" value="@Model.PurchaseStatus"></textarea>
                    <input type="hidden" id="Summaryid" name="Summaryid" value="@Model.Id" />
                    <input type="hidden" id="PageName" name="PageName" value="@ViewBag.PageName" />
                </div>
                <div class="form-group" style="text-align: right">
                    <button type="button" onclick="Quote.addPurchaseSummary()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.PurchaseStatus))
{
    <text>
        <script type="text/javascript">
            var test = $("#SummaryText").attr('value');
            document.getElementById("SummaryText").value = test;
        </script>
    </text>
}