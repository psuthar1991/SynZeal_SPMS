@{
    ViewBag.Title = "COA Remarks";
    Layout = null;

}
<div class="col-md-12">
    <div class="box">
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">COA Remark</label>
                    <textarea class="form-control" id="COARemarkText" name="COARemarkText" rows="25" value="@ViewBag.COARemark"></textarea>
                    <input type="hidden" id="remarkId" name="remarkId" value="@ViewBag.Id" />
                    <input type="hidden" id="Page" name="Page" value="@ViewBag.Page" />
                </div>
                <div class="form-group" style="text-align: right">
                    <button type="button" onclick="Quote.addCOARemark()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.COARemark))
{
    <text>
        <script type="text/javascript">
            var test = $("#COARemarkText").attr('value');
            document.getElementById("COARemarkText").value = test;
        </script>
    </text>
}