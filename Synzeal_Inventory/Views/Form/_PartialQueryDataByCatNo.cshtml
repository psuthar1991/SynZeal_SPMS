@model  List<Synzeal_Inventory.Entity.SZ_QueryModule>
@using Synzeal_Inventory.Entity;
@{
    ViewBag.Title = "Query List";
    Layout = null;

    SynzealLiveEntities db = new SynzealLiveEntities();
}
<div class="col-md-12">
    <!-- general form elements -->
    <!-- /.box-header -->
    <div class="box">

        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <h2>CAT No: @ViewBag.CatNo</h2>
                </div>
                @if (Model.Count > 0)
                {
                    <table id="tblquerylist" class="table table-bordered table-striped" width="100%">
                        <thead>
                            <tr>
                                <th>Query No</th>
                                @if (ViewBag.pagename != "dispatch")
                                {
                                <th>Email</th>
                                }
                                <th>QuerySubject</th>
                                <th>Query Type</th>
                                <th>Origin</th>
                                <th>Sub-Status</th>
                                <th>Batch No</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.QueryNo</td>
                                @if (ViewBag.pagename != "dispatch")
                                {
                            <td>@item.Email</td>
                                }
                                
                                <td>@item.QuerySubject</td>
                                <td>@item.QueryType</td>
                                <td>@item.Origin</td>
                                <td>@item.SubStatus</td>
                                <td>@item.BatchNo</td>
                            </tr>
                            }
                        </tbody>
                    </table>

                }
                else
                {
                    <div style="text-align:center;font-size:40px">
                        <i class="fa fa-database"></i>
                        <p>No Data Found</p>
                    </div>
                    <div class="form-group" style="text-align: right">
                        <button type="button" data-dismiss="modal" class="btn btn-primary">Close</button>
                    </div>
                }
            </div>
        </form>
    </div>
</div>