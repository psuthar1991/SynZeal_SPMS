@{
    ViewBag.Title = "SOP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Synzeal_Inventory.Entity.SZ_SOP>
@using Synzeal_Inventory.Models
<section class="content-header">
    <h1>
        SOP
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <ul class="nav nav-tabs" id="tabullist">
                    <li class="active"><a data-toggle="tab" href="#home">QAD</a></li>
                    <li><a data-toggle="tab" href="#QCD">QCD</a></li>
                    <li><a data-toggle="tab" href="#ITD">ITD</a></li>
                    <li><a data-toggle="tab" href="#HRD">HRD</a></li>
