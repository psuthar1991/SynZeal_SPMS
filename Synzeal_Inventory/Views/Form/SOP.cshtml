<script type="text/javascript">
    function openpopup(filepath) {
        $('#myModal').find('.modal-body').html('<iframe id="iframesop" src="' + filepath + '#toolbar=0" style="width:100%; height:600px;" frameborder="0"></iframe>');
        $('#myModal').modal({ show: true });
        $('#myModal').find(".modal-dialog").css("width", "780px");
    }
</script>