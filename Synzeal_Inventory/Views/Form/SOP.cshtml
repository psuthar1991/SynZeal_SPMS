                    <li><a data-toggle="tab" href="#ENG">ENG</a></li>
                </ul>

                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">

                        <div class="content">
                            @if (Model != null && Model.Where(x => x.DepartmentName == "QAD").Count() > 0)
                            {
                                foreach (var item in Model.Where(x => x.DepartmentName == "QAD").ToList())
                                {
                                    <div class="col-md-4">
                                        @*<a data-toggle="modal" data-target="#myModal" class="btn btn-primary" href="@item.FilePath">@item.FileName</a>*@
                                        <a href="javascript:void(0)" onclick="openpopup('@item.FilePath')">
                                            @item.FileName
                                        </a>
                                    </div>
                                }
                            }
                            else
                            {
                                <span>No Data Found</span>
                            }
                        </div>
