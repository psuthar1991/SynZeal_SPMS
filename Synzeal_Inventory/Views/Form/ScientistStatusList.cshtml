@{
    ViewBag.Title = "CompanyList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Synzeal_Inventory.Entity.SZ_ScientistStatus>
@using Synzeal_Inventory.Models
<section class="content-header">
    <h1>
        Scientist Status List  <a data-toggle="modal" data-target="#myModal" style="float:right" class="btn btn-primary" href="@Url.Action("AddScientistStatus","Form")">Add Status</a>
    </h1>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Name</td>
                                        <td>
                                            <a data-toggle="modal" data-target="#myModal" href="@Url.Action("AddScientistStatus","Form",new { id = i.Id})"> Edit</a> |
                                            <a href="javascript:void(0)" onclick="deleteScientist('@i.Id')"> Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>
<script>
	$(function () {
	    $('#example1').DataTable({
	        "pageLength": 25,
	        "order": [[0, "asc"]]
	    })
	});

    function deleteScientist(id)
    {
    swal({
            title: "Are you sure?",
            text: "You will not be able to recover this scientist status!",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "No, cancel!",
            closeOnConfirm: true,
            closeOnCancel: true
        },
            function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        type: "POST",
                        url: "/Form/DeleteScientistStatus?id=" + id,
                        data: {},
                        success: function (results) {
                            if (results.success) {
    toastr.success("Company has been deleted.");
                                setTimeout(function () { window.location.reload(true); }, 2000);
                            }
                            else{
                                if (results.multiple) {
    toastr.error("Scientist Status already assigned to quotation.");
                                }
                                
                            }
                        }
                    });

                } else {
    toastr.error("Your added quote is safe :)");
                }
            });
    }
</script>