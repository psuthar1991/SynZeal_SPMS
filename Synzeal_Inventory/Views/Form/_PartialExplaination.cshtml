@model  Synzeal_Inventory.Entity.SZ_QuotationDetail
@{
    ViewBag.Title = "Company";
    Layout = null;
    string sectionName = ViewBag.sectionName;

}
<div class="col-md-12">
    <div class="box">
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                 <div class="form-group">
                     <label for="exampleInputEmail1">Explanation</label>
                    <textarea class="form-control" id="ExplanationText" name="ExplanationText" rows="25" value="@Model.Explanation"></textarea>
                    <input type="hidden" id="Explanationid" name="Explanationid" value="@Model.Id" />
                </div>
                <div class="form-group" style="text-align: right">
                    <button type="button" onclick="Quote.addExplanation()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Explanation))
{
    <text>
        <script type="text/javascript">
            var test = $("#ExplanationText").attr('value');
            document.getElementById("ExplanationText").value = test;
        </script>
    </text>
}