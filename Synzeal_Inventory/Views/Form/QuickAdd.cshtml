@{
    ViewBag.Title = "QuickAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Quick Add
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12" id="leftsidediv">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Add New</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" id="frmquickadd">
                    <div class="box-body">
                        <div class="form-group" style="    width: 15%;float: left;margin-right: 25px;">
                            <label for="exampleInputPassword1">CAT No.</label>
                            <input type="email" class="form-control" id="txtsearch" name="txtsearch" placeholder="CAT No" autocomplete="off" required>
                        </div>
                        <div class="box-footer">
                            <button type="button" class="btn btn-primary" style="    margin-top: 13px;" onclick="Quote.addTempQuick()">Add</button>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-body">
                        <table class="table table-bordered table-striped dataTable no-footer ">
                            <thead>
                                <tr>
                                    <th>
                                        CAT No.
                                    </th>
                                    <th>
                                        CAS No.
                                    </th>
                                    <th>
                                        Product Name
                                    </th>
                                    <th>
                                        Team leader
                                    </th>
                                    <th>
                                        QTY
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="divQuickBox"></tbody>
                        </table>
                        <div>
                            <div class="form-group" style="    width: 15%;float: left;margin-right: 25px;">
                                <label for="exampleInputPassword1">Project Type : </label>
                                @Html.DropDownList("listProjectTypeItems", (IEnumerable<SelectListItem>)ViewBag.listProjectTypeItems, new { @class = "form-control" })
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="box-footer">
                            <button type="button" class="btn btn-primary" onclick="Quote.SaveQuickAdd()">Save</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.box -->

        </div>
    </div>
</section>
<script type="text/javascript">
    GetTempQuickData();

    function GetTempQuickData() {
        $.ajax({
            type: "GET",
            url: "/Form/GetTempQuickData",
            data: {},
            success: function (results) {
                $("#divQuickBox").html(results.html);
            }
        });
    }
</script>