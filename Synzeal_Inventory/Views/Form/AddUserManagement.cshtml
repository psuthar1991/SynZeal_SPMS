@{
    ViewBag.Title = "Add Sample Reason";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  Synzeal_Inventory.Entity.SZ_UserManagement
<!-- left column -->
<div class="col-md-12">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Add New User Access</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="col-md-8">
                    <div class="form-group col-md-3">
                        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                        <label for="exampleInputEmail1">User Name</label> <br />
                        @Html.DropDownList("UserId", (IEnumerable<SelectListItem>)ViewBag.userList, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-2">
                        <label for="exampleInputEmail1">Language</label>
                        @Html.DropDownList("DefaultCurrencyId", (IEnumerable<SelectListItem>)ViewBag.langList, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-2">
                        <label for="exampleInputEmail1">Is Payment Show?</label>
                        <input type="checkbox" id="IsPaymentShow" name="IsPaymentShow" />
                    </div>
                    <div class="form-group col-md-2">
                        <label for="exampleInputEmail1">Is Notification?</label>
                        <input type="checkbox" id="IsNotification" name="IsNotification" />
                    </div>
                    <div class="form-group col-md-2">
                        <label for="exampleInputEmail1">Is Newsletter?</label>
                        <input type="checkbox" id="isNewsLetter" name="isNewsLetter" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group col-md-12">
                        <label for="exampleInputEmail1">Company Name</label>
                        @Html.DropDownList("CompanyIds", (IEnumerable<SelectListItem>)ViewBag.compList, new { @class = "form-control", @multiple = "" })
                        <i class="fa fa-gear" onclick="SearchEmailIdFromCompanyList()" style="float: right; margin-top: -21px; margin-right: -17px;"></i>
                    </div>
                </div>
               <br />

                <div class="form-group" style="text-align:left">
                    <button type="button" onclick="Quote.addUsermanagementList()" class="btn btn-primary">Save</button>
                </div>
            </div>
</form>
    </div>
</div>
