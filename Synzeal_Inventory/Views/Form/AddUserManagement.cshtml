<script src="https://cdn.jsdelivr.net/gh/davidstutz/bootstrap-multiselect@master/dist/js/bootstrap-multiselect.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/davidstutz/bootstrap-multiselect@master/dist/css/bootstrap-multiselect.css">

<script>
    jQuery('#UserId').multiselect({
        includeSelectAllOption: false,
        enableFiltering: true,
        filterPlaceholder: 'Search',
        enableCaseInsensitiveFiltering: true,
        dropRight: true
    });

    jQuery('#CompanyIds').multiselect({
        //columns: 1,
        //placeholder: 'Select Company',
        //search: true
        includeSelectAllOption: false,
        enableFiltering: true,
        filterPlaceholder: 'Search',
        enableCaseInsensitiveFiltering: true,
        dropRight: true
    });

    function SearchEmailIdFromCompanyList() {
        var companyIds = $("#CompanyIds").val().join(',');
        $.ajax({
            type: "GET",
            url: "/Form/GetUserManagementDataByCompanyIds?companyIds=" + companyIds,
            data: {},
            success: function (results) {
                var str = "<table class='table table-bordered table-striped dataTable no-footer' style='width: 100%'>";
                $(results).each(function (i, v) {
                    str += "<tr><td>" + v.Username + "</td><td>" + v.EmailAddress + "</td></tr>";
                });
                str += "</table>";
                $('#myModal').find('.modal-body').html(str);
                $('#myModal').modal({ show: true });
                $('#myModal').find(".modal-dialog").css("width", "580px");
            }
        });
    }
</script>

@if (Model.Id > 0)
{
    <text>
        <script type="text/javascript">
            if ('@Model.CompanyIds' !== '') {
                var selectedOptions = '@Model.CompanyIds'.split(",");
                for (var i in selectedOptions) {
                    var optionVal = selectedOptions[i];
                    $("#CompanyIds").find("option[value=" + optionVal + "]").prop("selected", "selected");
                }
                $("#CompanyIds").multiselect('refresh');
            }

            if ('@Model.isNewsLetter' == 'True') {
                $("#isNewsLetter").prop('checked', true);
            }
            if ('@Model.IsNotification' == 'True') {
                $("#IsNotification").prop('checked', true);
            }
            if ('@Model.IsPaymentShow' == 'True') {
                $("#IsPaymentShow").prop('checked', true);
            }
        </script>
    </text>
}

<style>
    .multiselect-option {
        background: none;
        border: none;
        float: left;
        width: 100%;
        text-align: left;
    }

    .multiselect-search {
        width: 90%;
        margin-left: 10px !important;
        border: 1px solid black !important;
    }

    .text-muted{
        display: none;
    }
</style>