@model  Synzeal_Inventory.Entity.SZ_InvoiceData
@{
    Layout = null;
}
<div class="col-md-12" style="font-family:Cambria">
    <div class="box box-primary" style="font-size:15px;color:#000;  line-height: 1.7;">
        <div class="box-header with-border">
            <img title="SynZeal" alt="SynZeal" style="width:280px; height:80px;" src="https://synzeal.com/Themes/DefaultClean/Content/images/logo.png" />
        </div>
        <p style="text-align:left; ">
            <br />
            Date: @Model.InvoiceDate.ToString("dd/MM/yyyy")
        </p> <br />
        <p style="text-align:left">
            To,<br />
            The Deputy Commissioner of Customs,<br />
            Air Cargo Complex,<br />
            Ahmedabad.
        </p> <br /> 
        <p style="font-weight:bold;">
            <b>Sub: Reply against Query</b>
        </p>
        <p>
            Invoice No. @Model.InvoiceNo &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Date: @Model.InvoiceDate.ToString("dd/MM/yyyy")
        </p> 
        <p>
            Respected Sir,
        </p>
        <p style="text-align:justify">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;With reference to the above subject, we certify that we are exporting Certified Reference Standard materials like Impurity standards, working standards, Please refer attached certificate of analysis of products under HSN (38229010/2938.90.90) to <b>@Model.CompanyName<span>, </span> @Model.Add1<span>,</span> @Model.Add2<span>,</span> @Model.City<span>,</span> @Model.Country .</b> These are not the diagnostic kits or not laboratory reagent. They are used for analytical research purpose as reference standard to qualify the pharmaceutical preparations. It is not used for any human testing. They are not for human and animal use in any form. They are chemically synthesized and not of biological origin.
        </p> <br /> 
        <p>
            @if (Model.SZ_InvoiceDetailsData != null && Model.SZ_InvoiceDetailsData.Count > 0)
            {
                int loop = 1;
                foreach (var item in Model.SZ_InvoiceDetailsData)
                {
                    <span>@loop<span>.</span> @item.ProductName<br /></span>
                    loop += 1;
                }
            }
        </p>
        <p>
            <br />
            @*<b>
            “This Shipment does not contain any item that is restricted for export as per the notification No. 09/2015-20 dated 10.06.2020”
        </b>*@
            <b>
                “These products not fall in scomet list and any product not fall under notification 18/2015-20 DT 16.08.2021”
            </b>
        </p>
        <p style="text-align:left">
            <br /> 
            Kind regards,
            @*<b>Mayur Nandkar</b><br />*@
            <b>Export Department</b><br />
            <b>SynZeal Research Private Limited</b>
        </p>
    </div>
</div>
