@model  Synzeal_Inventory.Entity.SZ_QuotationDetail
@{
    ViewBag.Title = "Company";
    Layout = null;
    bool isClientSection = ViewBag.isClientSection;
}
<div class="col-md-12">
    <!-- general form elements -->
    <!-- /.box-header -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Add Client Remark</h3>
        </div>
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Remark</label>
                    <textarea class="form-control" id="ClientRemark" rows="25" value="@Model.ClientRemark"></textarea>
                    <input type="hidden" id="qdid" name="qdid" value="@Model.Id" />
                    <input type="hidden" id="isClientSection" name="isClientSection" value="@(isClientSection == true ? "true" : "false")" />
                </div>
                <div class="form-group" style="text-align:right">
                    <button type="button" onclick="Quote.addRemarkData()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ClientRemark))
{
    <text>
        <script type="text/javascript">
            var test = $("#ClientRemark").attr('value');
        document.getElementById("ClientRemark").value = test;
        </script>
    </text>
}