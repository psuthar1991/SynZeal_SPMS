@{
    ViewBag.Title = "Add payment Term";
    Layout = null;
}
@model  Synzeal_Inventory.Entity.PaymentTerm
<!-- left column -->
<div class="col-md-12">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Add New Payment Term</h3>
        </div>
        @if (!string.IsNullOrEmpty(Model.UpdatedBy))
        {
        <p style=" color: #04c; padding-left: 11px; text-transform: capitalize;">Created By @Model.UpdatedBy</p>
        }
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Payment Term</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Payment Term" required value="@Model.Name">
                    <input type="hidden" id="id" name="id" value="@Model.Id" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Reminder Days</label>
                    <input type="text" class="form-control" id="Day" name="Day" placeholder="Day" value="@Model.Day">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Payment Term</label>
                    <input type="text" class="form-control" id="Note" name="Note" placeholder="Note" value="@Model.Note">
                </div>
                <div class="form-group" style="text-align:right">
                    <button type="button" onclick="Quote.addPaymentTermList()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
