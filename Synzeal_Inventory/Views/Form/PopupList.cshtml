@{
    ViewBag.Title = "POP UP List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Synzeal_Inventory.Entity.SZ_Popup>
@using Synzeal_Inventory.Models
<section class="content-header">
    <h1>
        POP UP List
        <a style="float:right" class="btn btn-primary" href="@Url.Action("AddPopup","Form")">Add Pop up</a>
        <a style="float:right; margin-right:7px;" class="btn btn-primary" href="@Url.Action("AddPopupGroup","Form")">Add Group</a>
        <a style="float: right; margin-right: 7px;" class="btn btn-primary" href="@Url.Action("GroupList","Form")">Group List</a>
    </h1>
    <div class="clearfix"></div>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>
                                        @i.Name
                                    </td>
                                    <td>
                                        <a href="@Url.Action("AddPopupGroup","Form",new { id = i.Id})">Edit</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>
<style>
    .clsblock {
        background: #5c5c5c !important;
        color: #fff;
    }

    #myModal .modal-content {
        width: 1080px;
    }

    #myModal .modal-dialog {
        width: 1080px;
    }
</style>
<script>
    $(function () {
        $('#example1').DataTable({
            "pageLength": 25,
            "order": [[0, "asc"]]
        })
    });

    function deleteCompany(id) {
        swal({
            title: "Are you sure?",
            text: "You will not be able to recover this company!",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "No, cancel!",
            closeOnConfirm: true,
            closeOnCancel: true
        },
            function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        type: "POST",
                        url: "/Form/DeleteCompany?id=" + id,
                        data: {},
                        success: function (results) {
                            if (results.success) {
                                toastr.success("Company has been deleted.");
                                setTimeout(function () { window.location.reload(true); }, 2000);
                            }
                            else {
                                if (results.multiple) {
                                    toastr.error('Company already assigned to quotation.');
                                }

                            }
                        }
                    });

                } else {
                    toastr.error('Your added quote is safe :).');
                }
            });
    }
</script>