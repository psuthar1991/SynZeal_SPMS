@model List<Synzeal_Inventory.Entity.SZ_QuoteDetailForm>
<style type="text/css">
</style>
<div class="box-body form-horizontal" id="profrm" style="overflow:scroll">
    @if (Model.Count > 0)
    {
        <div>
            <button type="button" onclick="Quote.LinkBatchNo(@ViewBag.QuoteDetailsId)" class="btn btn-primary">Save</button>
        </div>
        <table class="table table-bordered table-striped dataTable no-footer">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Batch
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                    <tr>
                        <td><input type="checkbox" class="clslinkproduct" value="@k.Id" /></td>
                        <td>@k.BatchCode</td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div style="text-align: center;color: lightgray;font-size: 36px;">
            <i class="fa fa-database" style="font-size:120px;"></i> <br />No Products Found!!!
        </div>
    }
</div>

<style type="text/css">
    .clsFindproducttr img {
        position: absolute;
        background: white;
        border: 2px solid #ececec;
        box-shadow: 1px 0px 3px 3px #ececec;
        left: 4%;
        margin-top: 20px;
    }
</style>
<script type="text/javascript">
    $(".clsFindproducttr").mouseenter(function () {
        $(this).find("img").show();
    });
    $(".clsFindproducttr").mouseleave(function () {
        $(this).find("img").hide();
    });
</script>