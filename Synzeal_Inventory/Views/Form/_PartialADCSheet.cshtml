@model  Synzeal_Inventory.Entity.SZ_InvoiceData
@{
    ViewBag.Title = "Company";
    Layout = null;
}
<div class="col-md-12" style="font-family:Calibri; color:#000; font-size:10px;">
    <div class="box box-primary">
        <p style="text-align:center; font-weight: bold; font-size:16px;">
            Government of India<br />
            Ministry of Health & Family Welfare, Directorate General of Health Services,<br />
            O/o Asst. Drugs Controller, Central Drugs Standard Control Organization<br />
            PORT OFFICE<br />
            International Air Cargo Complex, Meghani nagar, Ahmedabad.
        </p>
        <p style="text-align:center; font-weight: bold; font-size:16px;">
            ADC(I) SHEET FOR EXPORT
        </p>
    </div>

    <table width="100%" border="1" style="font-size:10px; border-collapse: collapse;">
        <tr>
            <td valign="middle" width="20%" rowspan="5" colspan="2" style="font-size: 12px;padding: 5px 10px;text-align: left; color: #000">
                Port of Loading AHMEDABAD INDIA
            </td>
            <td width="20%">
                <div style="font-size: 12px;float: left;padding: 5px 10px;text-align: left; color: #000">
                    ADC Entry No
                </div>
            </td>
            <td width="70%" colspan="8">
                <div style="font-size:10px;padding: 5px 10px;text-align:center;color:#000">
                </div>
            </td>
        </tr>
        <tr>
            <td width="20%">
                <div style="font-size: 12px;float: left;padding: 5px 10px;text-align: left;color: #000">
                    Shipping Bill No & Date
                </div>
            </td>
            <td width="70%" colspan="8">
                <div style="font-size:12px;padding: 5px 10px; text-align:center ;color:#000">

                </div>
            </td>
        </tr>
        <tr>
            <td width="20%">
                <div style="font-size: 12px;padding: 5px 10px;text-align: left;color: #000">
                    IEC Number
                </div>
            </td>
            <td width="70%" colspan="8">
                <div style="font-size:12px;padding: 5px 10px;text-align:center ;color:#000">
                    0814025277
                </div>
            </td>
        </tr>
        <tr>
            <td width="20%">
                <div style="font-size: 12px;padding: 5px 10px;text-align: left;color: #000">
                    Name & Address of Exporter :
                </div>
            </td>
            <td width="70%" colspan="8">
                <div style="font-size:12px;padding: 5px 10px;text-align:center ;color:#000">
                    SYNZEAL RESEARCH PRIVATE LIMITED,Plot No:F,Ganesh industrial Estate,<br /> 423/24/8,Mahagujarat industrial Estate, Sarkhej-Bavala road,Moraiya,Ahmedabad-382213
                </div>
            </td>
        </tr>
        <tr>
            <td width="20%">
                <div style="font-size: 12px;float: left;padding: 5px 10px;text-align: left;color: #000">
                    Name & Address of Consignee:
                </div>
            </td>
            <td width="70%" colspan="8">
                <div style="font-size:12px;padding: 5px 10px;text-align:center ;color:#000">
                    @Model.CompanyName <span> - </span> @Model.Add1<span>, </span>@Model.Add2<span>, </span>@Model.City<span>, </span>@Model.Country<span> - </span>@Model.PostCode
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:12px;padding: 5px 10px;font-weight:bold; text-align:center ;color:#000">S.No.</td>
            <td style="font-size:12px;padding: 5px 10px;font-weight:bold; text-align:center ;color:#000">Invoice No / Date</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000" width="30%">Name of the Product</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000">Batch No</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000">CAS No.</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000">CAT No.</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000">Total Export Qty (Miligram)</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000">ADC Sample Qty</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000"> DSL/DMI. No.</td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000">
                FOB Value INR
            </td>
            <td style="font-size:12px;padding:5px 10px;font-weight:bold; text-align:center ;color:#000">Remarks/ CHA Details.</td>
        </tr>

        @if (Model.SZ_InvoiceDetailsData != null && Model.SZ_InvoiceDetailsData.Count > 0)
        {
            var loop = 1;
            foreach (var item in Model.SZ_InvoiceDetailsData)
            {
                <tr>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @loop
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.SZ_InvoiceData.InvoiceNo
                        <br />
                        @item.SZ_InvoiceData.InvoiceDate.ToShortDateString()
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:left ;color:#000">
                        @item.ProductName
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.BatchNo
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.CASNo
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.CATNo
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.Qty
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.ADCQty
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.DSLNo
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.FOB
                    </td>
                    <td style="font-size:11px;padding:5px 10px;text-align:center ;color:#000">
                        @item.Remark
                    </td>
                </tr>
                loop += 1;
            }
        }

    </table>
</div>
<div>
    <br /><br />
    <div style="width:50%; float:left; font-family:Calibri; color:#000; font-size:10px;">
        <b>Enclosures :-</b> <span>CHECKLSIT</span> <br />
        <b>1. Shipping Bill :</b> <span>CHECKLSIT</span> <br />
        <b>2. Invoice :</b> <span>YES</span> <br />
        <b>3. Packing List :</b> <span>YES</span> <br />
        <b>4. Cert. of Analysis :</b> <span>YES</span> <br />
        <b>5. Sample :</b> <span>PERMISSION ON LABLE</span> <br />
        <b>6. Drug Licence :</b> <span></span> <br />
        <b>7. If any Intermediate  Please Submit MSDS</b> <span>No</span> <br />
        <b>8. If Third party Export: Requires to Submit Purchase Invoice bill with Exporter IEC </b>
    </div>
    <div style="width:50%; float:left; font-family:Calibri; color:#000; font-size:10px;">
        <b>Signature of the Exporter with Date & Stamp.</b><br />
        <b>Signature of the CHA  With Stamp.</b> <br />
        <b>1. Receiving. Time</b> <br />
        <b>2. Verified. Time</b> <br />
        <b>3. Released. Time</b>  <br />
        <b>4. Out. Time</b> <br />
    </div>
</div>
