@model  List<Synzeal_Inventory.Entity.SZ_Clientremark>
@{
    ViewBag.Title = "Company Details";
    Layout = null;
}
<div class="col-md-12">
    <div class="box">
        <!-- form start -->
        <form role="form">
            <div class="box-body">

                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-12" style="border:1px solid #0094ff">
                            <p>@item.SentUserName</p>
                            <p>@item.ClientRemarks</p>
                            <p>@item.CreatedDate</p>
                        </div>
                    }
                }

                <div class="form-group">
                    <label for="exampleInputEmail1">Remark</label>
                    <textarea class="form-control" id="ExplanationText" name="ExplanationText" rows="25" value=""></textarea>
                    <input type="hidden" id="Explanationid" name="Explanationid" value="" />
                </div>
                <div class="form-group" style="text-align: right">
                    <button type="button" onclick="Quote.addClientChat()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
