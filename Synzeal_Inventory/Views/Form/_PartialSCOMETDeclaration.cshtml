@model  Synzeal_Inventory.Entity.SZ_InvoiceData
@{
    ViewBag.Title = "Company";
    Layout = null;
}
<div class="col-md-12" style="font-family:Cambria">
    <div class="box box-primary" style="font-size:14px;color:#000;  line-height: 1.5;">
        <div class="box-header with-border">
            <img title="SynZeal" alt="SynZeal" style="width:280px; height:80px;" src="https://synzeal.com/Themes/DefaultClean/Content/images/logo.png" />
        </div>
        <p style="text-align:right; ">
            <br />
            Date: @Model.InvoiceDate.ToString("dd/MM/yyyy")
        </p>
        <p style="text-align:justify;">
            THE SUPERINTENDENT OF CUSTOM <br />
            OLD AIRPORT, AIR CARGO COMPLEX<br />
            AHMEDABAD
        </p>
        <p style="text-align:left; ">
            SUBJECT: SCOMET DECLARATION
        </p>
        <p style="text-align:left; ">
            INVOICE NO. @Model.InvoiceNo &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; DT: @Model.InvoiceDate.ToShortDateString()
        </p>
        <p>
            <br />
            DEAR SIR,
        </p>
        <p><br />
            WITH REFERENCE TO THE ABOVE MENTIOND SUBJECT WE ARE DECLARE THAT, THE GOODS WE ARE EXPORTING DO NOT FALLS SCOMET LIST AS PER INDIA FORIGN TRADE POLICY.
        </p>
        <p>
            WE REQUEST YOU TO KINDLY RELEASE THE ABOVE SHIPMENT.
        </p>
        <p><br />
            Authorized Signatory <br />
            @*<b>Mayur Nandkar</b><br />*@
            <b>Export Department</b><br />
            <b>SynZeal Research Private Limited </b>
        </p>
    </div>
</div>
