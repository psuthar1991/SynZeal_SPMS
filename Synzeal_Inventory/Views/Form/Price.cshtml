        function searchpriceinventory() {
            var value = $('#loadapiselect').val();
            if (value === "0") {
                swal("Please select API.")
                // return false;
            }

            PriceGrid(value);
        }
        
        function SelectPriceChar(char) {
            $('.letter').removeClass('letter-active');
            $('.letter').each(function () {
                var attr = $(this).attr('data-letter');
                if (attr == char) {
                    $(this).addClass('letter-active');
                }
            })
            $.ajax({
                type: "GET",
                url: "/Form/MainCategory/",
                data: { 'id': char },
                dataType: "json",
                success: function (response) {

                    if (response.records.length > 0) {
                        $('#grid').jqGrid("clearGridData");
                        $('#loadapiselect').empty();
                        var str = "";
                        str += "<option value='0'>--Select--</option>";
                        $(response.records).each(function (i, v) {
                           // str += "<div class='span2' onclick='PriceGrid(&#39;" + v.Name + "&#39;)'>" + v.Name + "</div>";
                            str += "<option value='" + v.Name + "'>" + v.Name + "</option>";
                        })
                        $('#loadapiselect').html(str);
                    }
                },
                error: function (response) {
                    alert("Error:" + response);
                }
            });
        }
    </script>
