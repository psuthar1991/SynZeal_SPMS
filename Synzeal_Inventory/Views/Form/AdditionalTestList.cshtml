@{
    ViewBag.Title = "Additional Test List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Synzeal_Inventory.Entity.SZ_AdditionalTest>
@using Synzeal_Inventory.Models
<section class="content-header">
    <h1>
        Additional Test List <a data-toggle="modal" data-target="#myModal" style="float:right" class="btn btn-primary" href="@Url.Action("AddAdditionalTest","Form")">Add Additional Test</a>
    </h1>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Test</th>
                                <th>INR</th>
                                <th>USD</th>
                                <th>GBP</th>
                                <th>EURO</th>
                                <th>Display Order</th>
                                <th>Make Default</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Test</td>
                                        <td>@i.INR</td>
                                        <td>@i.USD</td>
                                        <td>@i.GBP</td>
                                        <td>@i.EURO</td>
                                        <td>@i.DisplayOrder</td>
                                        <td>@i.MakeDefault</td>
                                        <td>
                                            <a data-toggle="modal" data-target="#myModal" href="@Url.Action("AddAdditionalTest","Form",new { id = i.Id})"> Edit</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>
<script>
	$(function () {
	    $('#example1').DataTable({
	        "pageLength": 25,
	        "order": [[5, "asc"]]
	    })
	});
</script>