@model List<Synzeal_Inventory.Entity.SZ_SampleReason>
@{
    int id = Convert.ToInt32(ViewBag.SampleRequestDetailsId);
    string reason = Convert.ToString(ViewBag.reason);
    List<string> reasonList = new List<string>();
    if (!string.IsNullOrEmpty(reason))
    {
        reasonList = reason.Split(',').ToList();
    }
}
<div class="box-body form-horizontal" style="border:1px solid #ececec">

    <div class="col-md-12">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="col-md-3">
                    @if (reasonList.Contains(item.Name))
                    {
                        <input type="checkbox" class="clssamplereason" checked value="@item.Name" /> @item.Name
                    }
                    else
                    {
                        <input type="checkbox" class="clssamplereason" value="@item.Name" /> @item.Name
                    }
                </div>
            }
        }

        <a href="javascript:void(0)" class="btn btn-primary" onclick="AddsampleReasonData(@id)">
            Submit
        </a>
    </div>
</div>
<script type="text/javascript">
    function AddsampleReasonData(id) {
        var str = [];
        $(".clssamplereason").each(function (i, v) {
            if ($(this).is(":checked")) {
                str.push($(this).val());
            }
        });

        if (str.length > 0) {
            $("#samplereason_" + id).text(str.join());
        }
        else {
            $("#samplereason_" + id).text('');
        }

        $('#clientremarkModal').modal('hide');

    }
</script>