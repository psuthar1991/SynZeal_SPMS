@model List<Synzeal_Inventory.Entity.SZ_QuotationDetail>
<style type="text/css">
</style>
<div class="box-body form-horizontal" id="profrm" style="overflow:scroll">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped dataTable no-footer">
            <thead>
                <tr>
                    <th>Ref</th>
                    <th>Created Date</th>
                    <th>Company Data</th>
                    <th>
                        CAT No.
                    </th>
                    <th>
                        CAS No.
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                <tr>
                    <td>
                        <a href="/Form/Quote/@k.QuoteId" target="_blank">
                            @k.SZ_Quotation.Ref
                        </a>
                    </td>
                    <td>@k.SZ_Quotation.CreatedDate.Value.ToShortDateString()</td>
                    <td>@k.SZ_Quotation.CompanyName</td>
                    <td>@k.CATNo</td>
                    <td>@k.CASNo</td>
                    <td>@k.ProductName</td>
                    <td>@k.Price</td>
                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div style="text-align: center;color: lightgray;font-size: 36px;">
            <i class="fa fa-database" style="font-size:120px;"></i> <br />No Products Found!!!
        </div>
    }
</div>

<style type="text/css">
    .clsFindproducttr img {
        position: absolute;
        background: white;
        border: 2px solid #ececec;
        box-shadow: 1px 0px 3px 3px #ececec;
        left: 4%;
        margin-top: 20px;
    }
</style>
<script type="text/javascript">
    $(".clsFindproducttr").mouseenter(function () {
        $(this).find("img").show();
    });
    $(".clsFindproducttr").mouseleave(function () {
        $(this).find("img").hide();
    });
</script>