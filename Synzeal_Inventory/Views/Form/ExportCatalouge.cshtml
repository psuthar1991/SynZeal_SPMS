        else {
            formData.append("dlabelled", "false");
        }
        if ($('#Nitroso').is(':checked')) {
            formData.append("Nitroso", "true");
        }
        else {
            formData.append("Nitroso", "false");
        }
        formData.append("API", apistr);

        $.ajax({
            type: 'POST',
            url: '/Form/GenerateCatalogueExcel',
            data: formData,
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (results) {
                /*window.location.href = results.returnFilePath;*/
                var win = window.open(results.returnFilePath, '_blank');
                if (win) {
                    //Browser has allowed it to be opened
                    win.focus();
                } else {
