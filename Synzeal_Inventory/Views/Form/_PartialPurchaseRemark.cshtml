@model  Synzeal_Inventory.Entity.SZ_QuotationDetail
@{
    ViewBag.Title = "Purchase Remark";
    Layout = null;
    string sectionName = ViewBag.sectionName;

}
<div class="col-md-12">
    <div class="box">
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                 <div class="form-group">
                     <label for="exampleInputEmail1">Remark</label>
                    <textarea class="form-control" id="RemarkText" name="RemarkText" rows="25" value="@Model.PurchaseRemark"></textarea>
                    <input type="hidden" id="Remarkid" name="Remarkid" value="@Model.Id" />
                </div>
                <div class="form-group" style="text-align: right">
                    <button type="button" onclick="Quote.addPurchaseRemark()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.PurchaseRemark))
{
    <text>
        <script type="text/javascript">
            var test = $("#RemarkText").attr('value');
            document.getElementById("RemarkText").value = test;
        </script>
    </text>
}