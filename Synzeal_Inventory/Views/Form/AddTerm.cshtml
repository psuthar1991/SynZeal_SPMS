@{
    ViewBag.Title = "Terms";
    Layout = null;
}

<!-- left column -->
<div class="col-md-12">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Add New Term</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Term Name</label>
                    <input type="text" class="form-control" id="term" name="term" placeholder="Term Name" required>
                </div>
                <div class="form-group" style="text-align:right">
                    <button type="button" onclick="Quote.addTermData()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>