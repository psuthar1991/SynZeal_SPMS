@{
    ViewBag.Title = "PaymentUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Payment Update
    </h1>
</section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <form role="form">
                    <div class="box-body">
                        <div class="form-group col-md-3">
                            <label for="exampleInputEmail1">Invoice No</label>
                            <input type="text" class="form-control" id="invoiceno" name="invoiceno" placeholder="Invoice Number">
                        </div>
                        <div class="form-group col-md-1">
                            <label for="exampleInputEmail1">Is Paid?</label>
                            <input type="checkbox" class="form-control" id="paid" name="paid" checked>
                        </div>
                        <div style="float: left;margin-top: 19px;">
                            <div>
                                <label for="inputPassword3" class="col-sm-10 control-label"></label>
                                <div>
                                    <button type="button" class="btn btn-primary" onclick="MarkasPaid()">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">

    function GeneratePOExcelReport() {
        window.location.href = '/Form/MarkasPaid?invoiceno=' + $("#invoiceno").val() + '&paid=' + $("#paid").is(":checked");
    }

</script>