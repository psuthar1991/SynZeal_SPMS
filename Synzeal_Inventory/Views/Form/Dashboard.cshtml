    function InStockAction(companyId) {
    
        $.ajax({
            url: '/Form/InStockAction',
            data: { id: companyId },
            type: 'POST',
            traditional: true, // add this
            dataType: 'json',
            success: function (data) {
                $('.modal-body').html(data.html);
                $('#myModal').modal({ show: true });
                $(".modal-dialog").css("width", "1200px");
            }
        });
    }

