@model List<Synzeal_Inventory.Models.ProductDetailsModel.SAPRawMaterialModel>

<div class="box-body form-horizontal" style="border:1px solid #ececec">

    <div class="col-md-12">
        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Sr No</th>
                        <th>Project</th>
                        <th>Req Username</th>
                        <th>Item Code</th>
                        <th>Item Name</th>
                        <th>CAS No</th>
                        <th>PR Date</th>
                        <th>Expected Receipt Date</th>
                        <th>PR Doc Remark</th>
                        <th>PO No</th>
                        <th>PO Free Text</th>
                        <th>PO Item Details</th>
                        <th>PO Line Remark</th>
                        <th>PO Doc Remark</th>
                        <th>Qty</th>
                        <th>Remain Qty</th>
                        <th>Make</th>
                        <th>Whs Code</th>
                        <th>GRPO Number</th>
                        <th>GRPO Date</th>
                        <th>GRPO Doc Remark</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SrNo</td>
                            <td>@item.Project</td>
                            <td>@item.Req_UserName</td>
                            <td>@item.ItemCode</td>
                            <td>@item.ItemName</td>
                            <td>@item.CASNo</td>
                            <td>@if(item.PR_Date.HasValue)
                                {
                                    @item.PR_Date.Value.ToShortDateString()
                                }
                            </td>
                            <td>@item.PO_Delivery_Date</td>
                            <td>@item.PR_Doc_Remark</td>
                            <td>@item.PO_Number</td>
                            <td>@item.PO_Free_Text</td>
                            <td>@item.PO_Item_Details</td>
                            <td>@item.PO_Line_Remark</td>
                            <td>@item.PO_Doc_Remark</td>
                            <td>@item.PO_Qty</td>
                            <td>@item.PO_Remain_Qty</td>
                            <td>@item.Make</td>
                            <td>@item.WhsCode</td>
                            <td>@item.GRPO_Number</td>
                            <td>
                                @if (item.GRPO_Date.HasValue)
                                {
                                    @item.GRPO_Date.Value.ToShortDateString()
                                }
                            </td>
                            <td>@item.GRPO_Doc_Remark</td>
                        </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>